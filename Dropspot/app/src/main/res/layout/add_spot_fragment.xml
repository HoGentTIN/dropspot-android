<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <LinearLayout
            android:id="@+id/addSpot_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <FrameLayout
                android:id="@+id/addFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

            <FrameLayout
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

            <TextView
                    android:id="@+id/name_label_add_spot"
                    android:layout_width="@dimen/add_spot_labels"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/name_label"
                    android:textSize="@dimen/text"
                    app:layout_constraintEnd_toStartOf="@+id/name_add_spot"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/name_label"/>

            <EditText
                    android:id="@+id/name_add_spot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0.5"
                    android:ems="10"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:text="@string/name_placeholder_add_spot"
                    android:textSize="@dimen/text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/name_label_add_spot"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/descr_label_add_spot"
                    android:layout_width="@dimen/add_spot_labels"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/description_label"
                    app:layout_constraintBottom_toTopOf="@+id/categories_add_spot"
                    app:layout_constraintEnd_toStartOf="@+id/descr_add_spot"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_add_spot"/>


            <EditText
                    android:id="@+id/descr_add_spot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:text="@string/descr_placeholder_add_spot"
                    android:textSize="@dimen/text"
                    app:layout_constraintBottom_toTopOf="@+id/categories_add_spot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/descr_label_add_spot"
                    app:layout_constraintTop_toBottomOf="@+id/name_add_spot"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categories_add_spot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/add_spot_contentdescr"
                android:scaleType="center"
                app:backgroundTint="@color/primary_color"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_add_24px" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>
