<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation"
            app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dropspot.controllers.HomeFragment"
        android:label=""
        tools:layout="@layout/home_fragment">


        <action
            android:id="@+id/action_homeFragment_to_meFragment"
            app:destination="@id/meFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/meFragment"
        android:name="com.example.dropspot.controllers.MeFragment"
        android:label=""
        tools:layout="@layout/me_fragment" />

</navigation>